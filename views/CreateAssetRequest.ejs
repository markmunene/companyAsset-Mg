<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>create category</title>
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">
    
    <link rel="stylesheet" href="../public/css/App.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <% if(user.role == "admin") { %>
        <%- include('AdminNavbar',{user}); %>
        
        <% } else { %>
            <%- include('Navbar',{user}); %>
<% } %>
    <%   if(typeof message != "undefined" && message) { %>
        <% if(status ==200) { %>

        <div class="mt-5 mb-3">

          <div class="alert alert-success alert-dismissible fade show" role="alert">

            <strong><%=  message  %> </strong>

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

          </div>

        </div> 
        <% } else { %>
            <div class="mt-5 mb-3">

                <div class="alert alert-warning alert-dismissible fade show" role="alert">
      
                  <strong><%=  message  %> </strong>
      
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      
                </div>
      
              </div> 

            <% }%>

      <% }    %>

    <div class="Create-container">
        
       
                <div class="card " style="width:35% ;">
                    <div class="card-header">
                        <h2 class="text-center">Create Asset Request</h2>
                    </div>
                    <div class="card-body">
                        <form action="/assetRequest/create" method="post">
                            <div class="form-group">
                                <label for="Asset">Asset (<span class="text-bold"><%= Assets.name %></span>)</label>

                        
                                <input type="text" value="<%= Assets.id %>" readonly   required class="form-control" name="assetId"  placeholder="Asset..." >
                             
                               
                            </div>
                            
                            <div class="form-group">
                                <!-- <label for="username">username</label> -->
                                <input type="hidden" required class="form-control" name="username" value="<%= user.username %>"  id="username" placeholder="Enter username">
                                <input type="hidden" required class="form-control" name="AssetQuantity" value="<%= Assets.quantity %>"  id="AssetQuantity" placeholder="Enter username">

                            </div>
                            <div class="form-group">
                                <!-- <label for="User">User</label> -->
                                <input type="hidden" required class="form-control" name="userId" value="<%= user.id %>"   placeholder="search User..." >
                                <!-- <datalist id="Users" >
                                    <% for(let i=0; i<Users.length; i++){ %>
                                   <option value=<%= Users[i].id %> ><%= Users[i].firstname %> <%= Users[i].secondname %></option>
                                  
                                        <% } %>
                                </datalist> -->
                            </div>
                            <div class="form-group">
                                <label for="quantity">Quantity</label>
                                <input type="number" required class="form-control" name="quantity" id="quantity" placeholder="Enter quantity">
                                <input type="hidden" class="form-control" name="requestStatus" id="requestStatus" value="pending" >

                            </div>
                          
                         
                          
                            
                            <div class="submit-wrapper mt-3" >
                
                                <button type="submit" class="btn btn-success w-100">submit</button>
                              
                            </div>
                        </form>

                      
            
        
                    </div>
                </div>
           
    </div>

    
</body>
</html>